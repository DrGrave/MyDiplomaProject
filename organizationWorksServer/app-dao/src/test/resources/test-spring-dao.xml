<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath*:test-spring-db.xml"/>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:app.properties</value>
                <value>classpath:database.properties</value>
                <value>classpath:hibernate.properties</value>
            </list>
        </property>
    </bean>


    <bean id="sessionFactory" class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="mappingResources">
            <list>
                <value>User.hbm.xml</value>
                <value>UserCredential.hbm.xml</value>
                <value>Group.hbm.xml</value>
                <value>Attorney.hbm.xml</value>
                <value>InClass.hbm.xml</value>
                <value>TypeInClass.hbm.xml</value>
                <value>Marks.hbm.xml</value>
                <value>Professor.hbm.xml</value>
                <value>Queue.hbm.xml</value>
                <value>Recension.hbm.xml</value>
                <value>Subject.hbm.xml</value>
                <value>Timeteable.hbm.xml</value>
                <value>TypeOfAttorney.hbm.xml</value>
                <value>TypeOfWork.hbm.xml</value>
                <value>Work.hbm.xml</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">${hibernate.dialect}</prop>
                <prop key="hibernate.current_session_context_class">${hibernate.current_session_context_class}</prop>
                <prop key="show_sql">${hibernate.show_sql}</prop>
                <prop key="hbm2ddl.auto">${hibernate.hbm2ddl.auto}</prop>
            </props>
        </property>
    </bean>

    <bean id="userDao" class="com.sethomecompany.dao.UserDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="userCredentialDao" class="com.sethomecompany.dao.UserCredentialDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean name="groupDao" class="com.sethomecompany.dao.GroupDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean name="attorneyDao" class="com.sethomecompany.dao.AttorneyDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean name="inClassDao" class="com.sethomecompany.dao.InClassDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean name="marksDao" class="com.sethomecompany.dao.MarksDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean name="professorDao" class="com.sethomecompany.dao.ProfessorDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean name="queueDao" class="com.sethomecompany.dao.QueueDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean name="recensionDao" class="com.sethomecompany.dao.RecensionDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean name="subjectDao" class="com.sethomecompany.dao.SubjectDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean name="timeteableDao" class="com.sethomecompany.dao.TimeteableDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean name="typeInClassDao" class="com.sethomecompany.dao.TypeInClassDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean name="typeOfAttorneyDao" class="com.sethomecompany.dao.TypeOfAttorneyDAOIpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean name="typeOfWorkDao" class="com.sethomecompany.dao.TypeOfWorkDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean name="workDao" class="com.sethomecompany.dao.WorkDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>


</beans>