<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.sethomecompany.domain">

    <class name="UserCredential" table="usercredentials">
        <id name="idUserCredential" column="idusercredentials">
            <generator class="native"/>
        </id>
        <property name="password" column="password"/>
        <property name="login" column="login"/>
        <property name="typeOfUser" column="type"/>
        <property name="user" column="iduser"/>
     </class>


</hibernate-mapping>