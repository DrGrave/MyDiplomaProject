<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.sethomecompany.domain">

    <class name="Work" table="work">
        <id name="idWork" column="idofwork">
            <generator class="native"/>
        </id>
        <property name="numberOfWork" column="numberofwork"/>
        <property name="nameOfWork" column="nameofwork"/>
        <property name="textOfWork" column="NameOfWork"/>
        <many-to-one name="subject" column="idsubject" class="Subject" not-null="true"/>
        <many-to-one name="typeOfwork" column="idtypeofwork" class="TypeOfwork" not-null="true"/>
    </class>


</hibernate-mapping>