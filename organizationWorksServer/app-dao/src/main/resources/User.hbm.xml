<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.sethomecompany.domain">

    <class name="User" table="student">
        <id name="id" column="idStudent">
            <generator class="native"/>
        </id>
        <property name="firstName" column="Name"/>
        <property name="middleName" column="surname"/>
        <property name="lastName" column="patronum"/>
        <property name="email" column="Email"/>
        <many-to-one name="group" column="idgroup" class="Group" not-null="true"/>
    </class>


</hibernate-mapping>